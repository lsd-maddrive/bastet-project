<?xml version="1.0"?>
<launch>

    <param name="use_sim_time" value="true" />

    <node pkg="rosbag" type="play" name="rosbag_play" output="screen"
        args="
            --quiet
            --clock
            --hz=100
            --topics
                /tf_static
                /bottom_ydlidar_scan/filtered
                /front_rs_d435i_camera/rgbd_image
            --bags $(find kitty_software)/bags/bag_from_lab.bag"/>

    <!-- mapping -->
    <include file="$(find kitty_software)/launch/drivers/hector_mapping.launch">
        <arg name="scan_input_topic" value="bottom_ydlidar_scan/filtered"/>
    </include>

    <!-- rgbd odometry -->
    <include file="$(find kitty_vision)/launch/drivers/rgbd_odom.launch">
        <arg name="camera_name" value="front_rs_d435i_camera"/>
        <arg name="publish_tf" value="true"/>
    </include>

    <!-- rosbag record /front_rs_d435i_camera/rgbd_image /bottom_ydlidar_scan/filtered /tf /tf_static -->

    <include file="$(find kitty_software)/launch/full/view_start_joy_control.launch">
    </include>

</launch>
